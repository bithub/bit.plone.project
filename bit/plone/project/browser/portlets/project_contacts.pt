<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
	   xmlns:metal="http://xml.zope.org/namespaces/metal"
	   i18n:domain="plone">
  <tal:is condition="view/showPortlet">

    <dl tal:attributes="id view/get_id;
			class view/get_class;">
      <dt class="portletTitle">
	<a tal:attributes="href view/get_url">
	  <h1 tal:content="view/get_title"
	      class="documentFirstHeading" />
	</a>
      </dt>
      <dd>
	<div class="project-info">
	  <div tal:content="view/get_email" class="email" />
	  <div tal:content="view/get_email" class="phone" />
	</div>

	<div class="project-contacts">
	  <ul>
	    <tal:loop repeat="contact view/get_contacts">
	      <li tal:content="contact" class="person" />
	    </tal:loop>
	  </ul>
	</div>

	<div class="project-urls">
	  <ul>
	    <tal:loop repeat="link view/get_links">
	      <li class="url">
		<a tal:attributes="href link"
		   tal:content="link" />
	      </li>
	    </tal:loop>
	  </ul>
	</div>
      </dd>
    </dl>
    <div class="visualClear"><!--is that clear?--></div>
  </tal:is>
</tal:block>
