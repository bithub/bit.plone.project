<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
	   xmlns:metal="http://xml.zope.org/namespaces/metal"
	   i18n:domain="plone">
  <tal:is condition="view/showPortlet">

    <dl tal:attributes="id view/get_id;
			class view/get_class;">
      <dt class="portletTitle">
	<a tal:attributes="href view/get_url">
	  <h1 tal:content="view/get_title"
	      class="documentFirstHeading" />
	</a>
      </dt>
      <dd>
	<dl>
	  <dt>Project email</dt>
	  <dd class="contact-info">
	    <span tal:content="view/get_email" />
	  </dd>
	  <dt>Project URL</dt>
	  <dd class="contact-info">
	    <span tal:content="view/get_url" />
	  </dd>
	  <dt>Project Contacts</dt>
	  <dd class="contact-info">
	    <tal:loop repeat="contact view/get_contacts">
	      <span tal:content="contact" />
	    </tal:loop>
	  </dd>
	  <dt>Project Links</dt>
	  <dd class="contact-info">
	    <tal:loop repeat="link view/get_links">
	      <span tal:content="link" />
	    </tal:loop>
	  </dd>
	</dl>
      </dd>
    </dl>
    <div class="visualClear"><!--is that clear?--></div>
  </tal:is>
</tal:block>
